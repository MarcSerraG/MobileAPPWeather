<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/im_daily_weather"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/im_daily_humidity"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/ic_humidity"
        app:layout_constraintStart_toEndOf="@+id/tv_daily_weather_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_daily_humidity"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:text="@string/humidity"
        app:layout_constraintStart_toEndOf="@+id/im_daily_humidity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_max_daily_temperature"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/temperature_grade"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_daily_date"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_max_daily_temperature"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_uparrow"
        app:layout_constraintStart_toEndOf="@+id/tv_max_daily_temperature"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_min_daily_temperature"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_downarrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_min_daily_temperature"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_min_daily_temperature"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/temperature_grade"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/im_max_daily_temperature"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_daily_weather_description"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/weather_description"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/im_daily_weather"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_daily_date"
        android:layout_width="121dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/date_daily"
        app:layout_constraintStart_toEndOf="@+id/im_daily_weather"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>